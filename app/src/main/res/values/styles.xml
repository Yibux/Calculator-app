<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="numberButton">
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:onClick">insertNumberAction</item>
    </style>

    <style name="functionalButton">
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="output">
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">50sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>